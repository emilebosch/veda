css:
  .last-commit {
    background-color:#efefef;
    padding:5px;
    border-radius:3px;
    margin:10 0px;
  }


  .authors {
    margin:0px;
    padding:0px;
    margin-top:-10px;
    list-style:none;
    margin-bottom:5px;
  }

  .authors img {
    border-radius:3px;
    height:30px;
    width:30px;
  }

  .page {
    width:900px; margin:0 auto;
    border:1px solid #efefef;
    padding:20px;
  }

  h1 {
    margin-top:0px;
  }

  pre code {
    padding:10px;
    display:block;
    border:1px solid #efefef;
    border-radius:3px;
  }

  .email, .comment, .rev {
    display:inline-block;
  }

  .rev {
    width: 60px;
    background-color: #efefef;
    border-radius: 3px;
    text-align: center;
  }

  .commits {
    border:1px solid #efefef;
    margin:0px;
    padding:0px;
    list-style:none;
    padding:20px;
  }

  .commits li {
    margin:0px;
    padding:0px;
  }

  .commits img {
    margin-right: 5px;
    width: 19px;
    height: 19px;
    border-radius: 2px;
    margin-top: -3px;
  }
.page
  h1=@page.title
  ul.authors
    - for name, y in @page.authors
      li: img width=40 height=40 src=gravatar(y[0].email) title="#{name} (#{y[0].email})"

  span Created by #{@page.log.last.author} on #{date(@page.log.last.date)}, latest edit #{@page.log.first.date.strftime('%b %e, %Y')} by #{@page.log.first.author}.

  .last-commit #{@page.log.first.comment} - #{date(@page.log.first.date)}

  ==markdown(@page.contents)
  ul.commits
    - for log in @page.log
      li
        .email: img src=gravatar(log.email)
        .rev=log.rev
        .comment=log.comment